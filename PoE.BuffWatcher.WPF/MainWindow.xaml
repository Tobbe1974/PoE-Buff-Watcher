<Window x:Class="PoE.BuffWatcher.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoE.BuffWatcher.WPF"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        WindowStyle="None" AllowsTransparency="True" Topmost="True"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="White"></SolidColorBrush>
    </Window.Background>
    <Image HorizontalAlignment="Left" Height="450" Margin="0,0,0,0" VerticalAlignment="Top" Width="800" Name="DebuffImage"/>
</Window>
